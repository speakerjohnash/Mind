<?php

/**
* Implements hook_block_info().
*/

function predict_block_info() {

  $blocks = array();

  $blocks['prediction_block'] = array(
    'info' => t('Make a Prediction'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );

  return $blocks;

}

/**
* Implements hook_block_view().
*/

function predict_block_view($delta = '') {

  $block = array();

  switch ($delta) {
    case 'prediction_block':
      $block['subject'] = '';
      $block['content'] = drupal_get_form('thought_form');
      break;
  }

  return $block;

}

/**
 * Define the form to be returned.
 */

function thought_form($form, &$form_state) {
	
	# Create Form
	$form['thought'] = array(
    '#type' => 'textfield',
    '#required' => TRUE,
    //'#title' => t("Prediction")
  );

  # State Button
  $form['state'] = array(
    '#type' => 'submit',
    '#value' => t('State'),
    '#access' => variable_get('node_preview_branschguiden', DRUPAL_OPTIONAL) != DRUPAL_REQUIRED || (!form_get_errors() && isset($form_state['node_preview'])),
    '#submit' => array('thought_form_submit'),
  );
 
 	# Predict Button
  $form['predict'] = array(
    '#type' => 'submit',
    '#value' => t('Predict'),
    '#access' => variable_get('node_preview_branschguiden', DRUPAL_OPTIONAL) != DRUPAL_REQUIRED || (!form_get_errors() && isset($form_state['node_preview'])),
    '#submit' => array('thought_form_submit'),
  );

  # Ask Button
  $form['ask'] = array(
    '#type' => 'submit',
    '#value' => t('Ask'),
    '#access' => variable_get('node_preview_branschguiden', DRUPAL_OPTIONAL) != DRUPAL_REQUIRED || (!form_get_errors() && isset($form_state['node_preview'])),
    '#submit' => array('thought_form_submit'),
  );

	# Ask Button
  $form['reflect'] = array(
    '#type' => 'submit',
    '#value' => t('Reflect'),
    '#access' => variable_get('node_preview_branschguiden', DRUPAL_OPTIONAL) != DRUPAL_REQUIRED || (!form_get_errors() && isset($form_state['node_preview'])),
    '#submit' => array('thought_form_submit'),
  );

  # Enable Privacy Settings
  $form['private'] = array(
    '#type' => 'checkbox',
    '#title' => t('Private'),
    '#default_value' => isset($form['#node']->private) ? $form['#node']->private : FALSE,
  );
  
  return $form;
  
}

