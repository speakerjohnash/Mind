{
	"mode": "train",
	"dataset": "data/input/thought.csv",
	"label_map": {"0": "Predict", "1": "State", "2": "Ask", "3": "Reflect"},
	"alphabet": "abcdefghijklmnopqrstuvwxyz0123456789,;.!?:'\"/\\|_@#$%^&*~`+-=<>()[]{}",
	"batch_size": 128,
	"doc_length": 123,
	"randomize": 5e-2,
	"momentum": 0.9,
	"base_rate": 2e-2,
	"decay": 1e-5,
	"epochs": 5000,
	"eras": 25
}
